<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="18dp">

        <include layout="@layout/message_profile_pic"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time"
                android:textSize="10sp"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    fontPath="fonts/Roboto-Regular.ttf"
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView"
                    android:text="@string/message_joining_welcome"
                    android:textSize="15sp"
                    android:textColor="@color/colorText" />

                <TextView
                    fontPath="fonts/Roboto-Regular.ttf"
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_participant"
                    android:textSize="15sp"
                    android:textColor="@color/colorRedAusPost"
                    android:layout_marginLeft="5dp"
                    android:maxLength="15"
                    android:lines="1"
                    android:ellipsize="marquee"
                    android:scrollHorizontally="true" />
            </LinearLayout>

            <TextView
                fontPath="fonts/Roboto-Regular.ttf"
                android:text="@string/message_joining_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/colorText" />

        </LinearLayout>

        <include layout="@layout/message_like"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRedAusPost</item>
        <item name="colorPrimaryDark">@color/colorText</item>
        <item name="colorAccent">@color/colorRedAusPost</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorRedAusPost</item>
        <item name="background">@color/colorRedAusPost</item>
        <item name="titleTextAppearance">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme..NoActionBar.FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBarSpecial" parent="AppTheme.NoActionBar"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorRedAusPost</item>
        <item name="android:actionMenuTextColor">@color/colorText</item>
        <item name="navigationIcon">@drawable/backarrow</item>
        <item name="actionMenuTextColor">@color/colorText</item>
    </style>

    <style name="titleBarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabStyle" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="tabIndicatorColor">@color/colorWhite</item>
    </style>

    <style name="NavMenuItem" parent="TextAppearance.Widget.AppCompat.ExpandedMenu.Item">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_spinner</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="colorAccent">@color/colorRedAusPost</item>
    </style>

    <style name="BottomNavigationMenu">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlNormal">@color/colorInactiveMenu</item>
        <item name="colorControlActivated">@color/colorRedAusPost</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorInactiveMenu</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/colorInactiveMenu</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#cdc6c5</item>
        <item name="colorControlActivated">#372e2c</item>
    </style>

</resources>
